@model RenoMate.Models.User

@{
    ViewData["Title"] = "Register";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css"
      integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A=="
      crossorigin="anonymous" referrerpolicy="no-referrer" />


<style>

    .myform {
        width: 40%;
        border: grey 2px solid;
        border-radius: 5px;
    }

    @@media screen and (max-width:426px) {
        .myform {
            width: 100%;
            border: none;
        }
    }

    .myform .my-3 {
        display: flex;
        justify-content: center;
    }

    .myform input {
        padding: 10px 15px;
        border-radius: 26px;
    }

        .myform input::-moz-placeholder {
            margin: 5px 0px;
        }

        .myform input::placeholder {
            margin: 5px 0px;
        }

        .myform input:focus {
            outline: none;
            box-shadow: none;
            border-color: #165a4a;
        }

    .myform .text-center .signup-btn {
        padding: 7px 15px;
        color: #ffffff;
        background-color: #165a4a;
        border-radius: 30px;
        font-size: 17px;
        border: 2px solid #165a4a;
    }

    .myform .text-center p a {
        background-color: transparent;
        border: none;
        text-transform: uppercase;
        color: blue;
        text-decoration: none;
    }

        .myform .text-center p a:hover {
            padding-bottom: 1px;
            border-bottom: 2px solid blue;
        }

    .myform .continue .social--media a {
        width: 3rem;
        height: 3rem;
        line-height: 2.7rem;
        margin: 0.2rem;
        display: inline-block;
        border: 0.125rem solid #165a4a;
        color: #165a4a;
        font-size: 1.2rem;
        text-align: center;
        border-radius: 100%;
        transition: all 0.3s cubic-bezier(0.645, 0.045, 0.355, 1);
    }

        .myform .continue .social--media a:hover {
            border-color: #165a4a;
            color: #165a4a;
            box-shadow: 0 0.0625rem 0.9375rem 0 rgba(0, 0, 0, 0.1);
            transform: translateY(-0.3rem);
            transition: all 0.5s ease-in-out;
        }

    hr {
        display: flex;
        justify-content: center;
    }

    .btn {
        width: max-content;
        border-radius: 5px;
        border: 2px solid #165a4a;
        background-color: #165a4a;
        color: #eaf1f0;
        text-transform: uppercase;
    }

</style>


<div class="row">
    <div style="width: 100%;" class="col-md-4">
        @* <form asp-action="Register">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
        <input asp-for="UserName" class="form-control" />
        <span asp-validation-for="UserName" class="text-danger"></span>
        </div>
        <div class="form-group">
        <input asp-for="UserEmail" class="form-control" />
        <span asp-validation-for="UserEmail" class="text-danger"></span>
        </div>
        <div class="form-group">
        <input asp-for="UserPassword" class="form-control" />
        <span asp-validation-for="UserPassword" class="text-danger"></span>
        </div>
        <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
        </div>
        </form> *@

        <div class="form d-flex justify-content-center">
            <div class="myform my-5 p-4">
                <h1 class="text-center mb-4">Sign Up here!</h1>
                <form asp-action="Register" method="POST">
                    <div class="my-3">

                        <input type="text" asp-for="UserName"
                               class="form-control"
                               id="username"
                               placeholder="User Name"
                               required />
                    </div>
                    <div class="my-3">
                        <input type="text" asp-for="UserEmail"
                               class="form-control"
                               id="UserEmail"
                               placeholder="User Email"
                               required />
                    </div>
                    <div class="my-3">
                        <input type="password" asp-for="UserPassword"
                               class="form-control"
                               id="password"
                               placeholder="Password"
                               required />
                    </div>
                    <div class="my-3">

                        <input type="number" asp-for="UserPhone"
                               class="form-control"
                               id="UserPhone"
                               placeholder="Phone Number"
                               required />
                    </div>
                    <div class="my-3">

                        <input type="text" asp-for="UserAddress"
                               class="form-control"
                               id="UserAddress"
                               placeholder="Address"
                               required />
                    </div>
                    <br>
                    <div class="text-center">
                        <button type="submit" class="btn my-2">Sign Up</button>
                        <p>
                            Already signed up? <a href="login.html" class="ms-1">Log In</a>
                        </p>
                    </div>
                    <hr />
                    <div class="continue with text-center">
                        <p>Or continue with</p>
                        <div class="social--media my-2">
                            <a href="https://www.facebook.com/"><i class="fa-brands fa-facebook-f fa-lg"></i></a>
                            <a href="https://twitter.com/?lang=en"><i class="fa-brands fa-twitter fa-lg"></i></a>
                            <a href="https://support.google.com/answer/2451065?hl=en"><i class="fa-brands fa-google-plus-g fa-lg"></i></a>
                            <a href="https://in.pinterest.com/"><i class="fa-brands fa-pinterest fa-lg"></i></a>
                        </div>
                    </div>
                </form>
            </div>
        </div>

    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
